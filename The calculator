#include <iostream>
#include <cmath>
using namespace std;


int main () 
{
int num1 , num2;
char op;

cout << " enter the first number "<<endl ;
cin >> num1;

cout << " enter the second number " <<endl;
cin >> num2;

cout << "enter the operator"<< endl;
cin >> op ;



if (op == '+')
{
  cout << num1 + num2;
}
else if (op == '-')
{
  cout << num1 - num2;
}
else if (op == '*')
{
  cout << num1 * num2;
}
else if (op == '/')
{
  cout << num1 / num2;
}
else {cout << "invalid op" << endl;}
return 0;
}
